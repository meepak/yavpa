{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react-native",
    "target": "esnext",
    "module": "commonjs",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "moduleDetection": "auto",
    "baseUrl": ".",
    "paths": {
      "@c/*": [
        "component/*"
      ],
      "@a/*": [
        "assets/*"
      ],
      "@u/*": [
        "utilities/*"
      ],
      "@s/*": [
        "splash/*"
      ],
      "@x/*": [
        "context/*"
      ],
    }
  }
}
